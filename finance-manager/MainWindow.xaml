<Window x:Class="finance_manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        xmlns:local="clr-namespace:finance_manager"
        mc:Ignorable="d"
        Title="Finance Manager" Height="600" Width="800"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="700"/>
            <!-- Main Content -->
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <StackPanel Background="#8DA7BE" Width="100" Height="585">
            <Button Width="80" Height="30" Content="Dashboard" 
                    Tag="Dashboard" Click="NavigateToPage" 
                    Margin="0,72,0,0"/>
            <Button Width="80" Height="30" Content="Products" 
                    Tag="Products" Click="NavigateToPage" 
                    Margin="0,72,0,0"/>
            <Button Width="80" Height="30" Content="Expenses" 
                    Tag="Expenses" Click="NavigateToPage" 
                    Margin="0,72,0,0"/>
            <Button Width="80" Height="30" Content="Statistics" 
                    Tag="Statistics" Click="NavigateToPage"
                    Margin="0,72,0,0"/>
            <Button Width="80" Height="30" Content="History" 
                    Tag="History" Click="NavigateToPage" 
                    Margin="0,72,0,0"/>
        </StackPanel>

        <!-- Main Content Area (Uses Frame to Load Pages) -->
        <Frame x:Name="MainFrame" Grid.Column="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
