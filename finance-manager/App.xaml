<Application x:Class="finance_manager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
             xmlns:local="clr-namespace:finance_manager"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/AdonisUI;component/ColorSchemes/Light.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/AdonisUI.ClassicTheme;component/Resources.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <CornerRadius x:Key="{x:Static adonisUi:Dimensions.CornerRadius}">4</CornerRadius>
            <Thickness x:Key="{x:Static adonisUi:Dimensions.BorderThickness}">2</Thickness>
            <Color x:Key="{x:Static adonisUi:Colors.AccentColor}">#576CA8</Color> <!--Button click -->


        </ResourceDictionary>
    </Application.Resources>
</Application>
